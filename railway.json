{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd map-app && npm ci && npm run build:ssr && cd ../tools/pmtiles && npm ci",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node scripts/start-app-with-worker.mjs",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
