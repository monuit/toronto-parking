{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd map-app && npm ci && npm run build:ssr"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd map-app && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
