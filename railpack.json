{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        "cd map-app && npm ci --include=dev"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "cd map-app && npm run build:ssr"
      ]
    }
  },
  "deploy": {
    "startCommand": "cd map-app && npm start",
    "variables": {
      "MAP_APP_MAX_HEAP_MB": "3072",
      "NODE_OPTIONS": "--optimize-for-size"
    }
  }
}
