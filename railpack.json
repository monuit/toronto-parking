{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "node": "22",
    "python": "3.13"
  },
  "steps": {
    "install": {
      "commands": [
        "npm ci --include=dev --prefix /app/map-app"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "npm run build:ssr --prefix /app/map-app",
        "npm ci --prefix /app/tools/pmtiles"
      ]
    }
  },
  "deploy": {
    "startCommand": "node /app/scripts/start-app-with-worker.mjs",
    "variables": {
      "MAP_APP_MAX_HEAP_MB": "3072",
      "NODE_OPTIONS": "--optimize-for-size --expose-gc"
    }
  }
}
